

    {{#each randomBeer}}
        <div class="container d-flex m-5">
            <div>
                <img class="card-img-top" src="{{this.image_url}}" alt="{{this.name}}">
            </div>
            
            <div class="ml-5">
                <h1 >{{this.name}}</h1>
                <p ><small class="text-muted">{{this.tagline}}</small></p>
                <p>{{this.description}}</p>
                <h3>Food pairing</h3>
                <ul>
                    {{#each food_pairing}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <h3>Brewers Tip</h3>
                <p>{{this.brewers_tips}}</p>
            </div>
        </div>
    {{/each}}


